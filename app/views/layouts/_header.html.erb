<header class="navbar navbar-fixed-top navbar-inverse" role="navigation">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "Habits app", root_path, id: "logo", class: "navbar-brand" %>
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to "ホーム", root_path %></li>
          <li><%= link_to "ヘルプ", help_path %></li>
          <!-- ログイン状態によってメニューを変化 -->
          <% if signed_in? %>
            <li><%= link_to "Users", users_path %></li>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">アカウント<span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", current_user %></li>
                <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                <!-- <li><%= link_to "ユーザの編集", "#", :class => 'navbar-link' %></li> -->
                <li class="divider"></li>
                <li><%= link_to "Sign out", signout_path, method: :delete, :class => 'navbar-link'%></li>
                </ul>
              </ul>
            </li>
          <% else %>
            <li><%= button_to "ログイン", signin_path, :method => :get, :class => "btn btn-primary navbar-btn" %></li>
            <li><%= link_to "Sign in", signin_path %></li>
          <% end %>
        </ul>
      </div> <!-- /. navbar-collapse -->
    </div> <!-- /. container -->
  </div> <!-- /. navbar-inner -->
</header>
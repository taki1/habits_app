<h1>目標一覧</h1>

<table class="index_list">
  <thead>
    <tr text-align="center" valign="middle">
      <!--<th>User</th>-->
      <th Width="500px">目標</th>
      <th Width="100px">開始日</th>
      <th Width="100px">終了日</th>
      <th Width="80px">実行日数</th>
      <!--<th Width="80px">未実行日数</th>-->
      <!--<th Width="80px">対象外日数</th>-->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @habits.each do |habit| %>
      <tr>
        <!--<td><%= habit.user_id %></td>-->
        <td class="title"><%= habit.target %></td>
        <td><%= habit.start_at.strftime('%Y/%m/%d') %></td>
        <td><%= habit.end_at.strftime('%Y/%m/%d') %></td>
        <!--<td><%= link_to 'Show', habit %></td>-->
        <!--<td><%= link_to 'Edit', edit_habit_path(habit) %></td>-->
        <!--<td><%= link_to 'Destroy', habit, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
        <td><%= habit.results.where('done=1').count %> / <%= habit.results.where('done<3').count %></td>
        <!--<td><%= 0 %></td>-->
        <!--<td><%= 0 %></td>-->
        <td Width="100px"><%= button_to '詳細', habit, :method => :get, :class => "button_show button_list" %></td>
        <td Width="100px"><%= button_to '編集', edit_habit_path(habit), :method => :get, :class => "button_edit button_list" %></td>
        <td Width="100px"><%= button_to '削除', habit, method: :delete, data: { confirm: 'Are you sure?' }, :class => "button_delete button_list" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="center">
<%= button_to '新規登録', new_habit_path, :method => :get, :class => "button_edit button_lg" %>
</div>


<%= form_for(@micropost) do |f| %>
  <% if @micropost.errors.any? %>
  <%= @micropost.errors.messages[:content][0] %>  
  <% end %>

  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_field :content %>
  </div>
  <div class="field">
    <%= f.label :user_id %><br>
    <%= f.number_field :user_id %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

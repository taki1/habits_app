<% provide(:title, 'Projects') %>
<h1>Projects</h1>
<u1>
  <% @projects.each do |project| %>
  <li>
    <%= link_to project.title, project_path(project.id)%>
    (<%= project.tasks.unfinished.count%> / <%= project.tasks.count%>)
    <%= link_to "[edit]", edit_project_path(project.id)%>
    <%= link_to "[delete]", project_path(project.id), method: :delete,data: { confirm: "削除してよろしいですか？" }%>
  </li>
  <% end %>
</u1>
<p><%= link_to "Add New", new_project_path%>
